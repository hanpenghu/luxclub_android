<!--消息提示框_普通消息_自定义样式-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/util_alert_message_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/util_transparent"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/util_shape_alert_message_background"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/util_alert_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:maxWidth="214dp"
            android:text="@string/app_name"
            android:textColor="@color/util_white"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>