    <dimen name="util_font_size_small_xx">8sp</dimen>
    <dimen name="util_font_size_small_x">10sp</dimen>
    <dimen name="util_font_size_small">12sp</dimen>
    <dimen name="util_font_size_default">14sp</dimen>
    <dimen name="util_font_size_large">16sp</dimen>
    <dimen name="util_font_size_large_x">18sp</dimen>
    <dimen name="util_font_size_large_xx">20sp</dimen>
