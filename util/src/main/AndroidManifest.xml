<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hsbank.util">
    <!-- 允许应用访问网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 允许应用监听网络状态变化 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <!-- 允许应用访问WIFI状态 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!-- 允许应用监听WIFI状态变化 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <!-- 允许应用连接互联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 允许应用读写SD卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许应用读取通讯簿 -->
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <!-- 允许应用写入通讯簿 -->
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <!-- 允许应用监听系统启动完毕消息 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <!-- 允许应用打开窗口 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <!-- 允许应用读取手机状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <!-- 允许应用读取电池状态 -->
    <uses-permission android:name="android.permission.BATTERY_STATS"/>
    <!-- 允许应用拨打电话 -->
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <!-- 允许应用读取系统设置  -->
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS"/>
    <!-- 允许应用写入系统设置  -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <!-- 允许应用得到位置信息  -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!-- 允许应用监听短信接收情况  -->
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <!-- 允许应用访问帐户列表 -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <!-- 允许应用请求验证 -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <!-- 允许应用管理AccountManager中的账户列表 -->
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>
    <!-- 允许应用通过账户验证方式访问账户管理ACCOUNT_MANAGER相关信息 -->
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
    <!-- 允许应用收到广播后快速收到下一个广播 -->
    <uses-permission android:name="android.permission.BROADCAST_STICKY"/>
    <!-- 允许应用访问CellID或WiFi热点来获取粗略的位置 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!-- 允许应用挂载和反挂载文件系统可移动存储 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!-- 允许应用读取系统日志文件 -->
    <uses-permission android:name="android.permission.READ_LOGS"/>
    <!-- 允许应用连接配对过的蓝牙设备 -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <!-- 允许应用访问或使用照相设备 -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <!-- 允许应用访问或使用振动设备 -->
    <uses-permission android:name="android.permission.VIBRATE"/>
    <!-- 允许应用访问闪光灯 -->
    <uses-permission android:name="android.permission.FLASHLIGHT"/>
    <!-- 设置当前Android程序支持的分辨率，以便在程序中得到正确的物理尺寸 -->
    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:resizeable="true"
        android:anyDensity="true" />
    <!-- 当前应用配置参数 -->
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".android.activity.util.BaseActivity"></activity>
    </application>
</manifest>
