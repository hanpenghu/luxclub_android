<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_common" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/line_divider" />

            <LinearLayout
                android:id="@+id/lly_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/setting_item_background"
                android:paddingBottom="@dimen/layout_space"
                android:paddingTop="@dimen/layout_space">

                <TextView
                    android:id="@+id/txt_order_commit"
                    style="@style/font_small_white_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/icon_order_submit_white"
                    android:gravity="center"
                    android:text="@string/txt_order_submission" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/txt_order_appointment"
                    style="@style/font_small_white_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/icon_order_appoiment_white"
                    android:gravity="center"
                    android:text="@string/txt_already_appointment" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/txt_order_completion"
                    style="@style/font_small_white_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/icon_order_completed_white"
                    android:gravity="center"
                    android:text="已完成" />
            </LinearLayout>

            <include layout="@layout/view_divider_line_h" />

            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/setting_item_background"-->
            <!--android:orientation="vertical">-->

            <!--<FrameLayout-->
            <!--android:layout_width="match_parent"-->
