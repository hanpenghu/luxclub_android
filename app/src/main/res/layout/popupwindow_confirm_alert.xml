<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black_transparent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="@drawable/shape_view_back_circle_white"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtConfirmTitle"
            style="@style/font_small_x_black_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:text="@string/txt_default" />

        <TextView
            android:id="@+id/txtConfirmContext"
            style="@style/font_small_x_black_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:padding="16dp"
            android:text="@string/txt_default" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <Button
                    android:id="@+id/btnCancel"
                    style="@style/font_small_x_black_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/selector_left_circle"
                    android:text="@string/txt_cancel"
                    android:textColor="@drawable/selector_left_circle" />

                <Button
                    android:id="@+id/btnConfirm"
                    style="@style/font_small_x_black_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/shape_view_right_selector_circle"
                    android:text="@string/txt_ok"
                    android:textColor="@drawable/shape_view_right_selector_circle" />
            </LinearLayout>

            <ImageView
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@color/line_divider"
                 />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_gravity="left|right|top"
                android:background="@color/line_divider"
                 />

        </FrameLayout>
    </LinearLayout>

</FrameLayout>