<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_common"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_space"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_divider" />

        <TextView
            android:id="@+id/txt_site_name"
            style="@style/font_small_xx_white_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/setting_item_background"
            android:drawableRight="@drawable/setting_view_arrow"
            android:padding="@dimen/layout_space"
            android:text="@string/txt_recharge_card" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/setting_item_background"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/setting_item_background"
                android:padding="@dimen/layout_space">

                <TextView
                    style="@style/font_small_xx_white_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_consume_amount" />

                <TextView
                    android:id="@+id/mTxtFeeMoney"
                    style="@style/font_small_xx_gray_deep_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_space"
                    android:text="@string/txt_default" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/layout_space"
                android:background="@color/line_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/setting_item_background"
                android:padding="@dimen/layout_space">

                <TextView
                    style="@style/font_small_xx_white_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_order_number" />

                <TextView
                    android:id="@+id/txt_order_code"
                    style="@style/font_small_xx_gray_deep_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_space"
                    android:text="@string/txt_default" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/layout_space"
                android:background="@color/line_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/setting_item_background"
                android:padding="@dimen/layout_space">

                <TextView
                    style="@style/font_small_xx_white_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_record_consumption_time" />

                <TextView
                    android:id="@+id/mTxtOrderTime"
                    style="@style/font_small_xx_gray_deep_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_space"
                    android:text="@string/txt_default" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/layout_space"
                android:background="@color/line_divider" />

            <LinearLayout
                android:id="@+id/lly_pay_way"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/setting_item_background"
                android:padding="@dimen/layout_space">

                <TextView
                    style="@style/font_small_xx_white_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_order_payment" />

                <TextView
                    android:id="@+id/txt_pay_way"
                    style="@style/font_small_xx_gray_deep_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_space"
                    android:text="@string/txt_default" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_divider" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
