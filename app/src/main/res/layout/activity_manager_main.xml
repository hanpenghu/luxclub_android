<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_common" />

    <FrameLayout
        android:id="@+id/manager_main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/app_background">

    </FrameLayout>

    <RadioGroup
        android:id="@+id/rgroup_manager_otab_bottom"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/tab_bottom_background"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbtn_manager_order"
            style="@style/BottomTabStyle"
            android:checked="true"
            android:drawableTop="@drawable/selector_btn_tab_order"
            android:text="@string/txt_manager_order" />

        <RadioButton
            android:id="@+id/rbtn_manager_my"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/selector_btn_tab_my"
            android:text="@string/txt_my" />
    </RadioGroup>

</LinearLayout>
