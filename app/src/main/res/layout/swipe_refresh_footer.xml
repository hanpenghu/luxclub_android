<?xml version="1.0" encoding="utf-8"?><!-- pull_to_refresh：上拉刷新下拉加载 尾部视图 -->
<com.hsbank.luxclub.mywidget.swipe_refresh_loadmore.MyLoadMoreFooterView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleSmallInverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/txt_load_more" />

        <ImageView
            android:id="@+id/img_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/txt_load_more"
            android:src="@drawable/icon_refresh_success" />

        <TextView
            android:id="@+id/txt_load_more"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/gray_deep_x"
            tools:text="LoadMore" />
    </RelativeLayout>
</com.hsbank.luxclub.mywidget.swipe_refresh_loadmore.MyLoadMoreFooterView>