<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_press_back">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/txt_card_num_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_small_xx_white_text"
            android:text="会员卡号:"/>
        <TextView
            android:id="@+id/txt_card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_small_xx_white_text"
            android:layout_toRightOf="@id/txt_card_num_title"
            android:layout_marginLeft="5dp"
            tools:text="88018801"/>
        <TextView
            android:id="@+id/txt_create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_small_x_gray_text"
            android:layout_below="@id/txt_card_num_title"
            android:layout_marginTop="6dp"
            tools:text="2017-05-12 10:20:36"/>

        <TextView
            android:id="@+id/txt_actual_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_small_xx_yellow_text"
            android:layout_toLeftOf="@+id/txt_unit"
            android:layout_centerVertical="true"
            android:layout_marginTop="6dp"
            tools:text="100,000.00"/>

        <TextView
            android:id="@+id/txt_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_small_xx_white_text"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="5dp"
            android:text="@string/txt_rmb_unit"/>
    </RelativeLayout>
</FrameLayout>
