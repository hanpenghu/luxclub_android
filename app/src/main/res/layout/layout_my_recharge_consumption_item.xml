<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/mRlyYear"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/app_background">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/line_divider"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/line_divider"/>

        <TextView
            android:id="@+id/txtUserTime"
            style="@style/font_small_xx_gray_deep_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_space"
            android:text="@string/txt_default"/>

        <TextView
            android:id="@+id/mTxtMoneySum"
            style="@style/font_small_xx_gray_deep_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_space"
            android:text="@string/txt_default"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/mRlyYear"
        android:background="@color/setting_item_background">

        <TextView
            android:id="@+id/txt_site_name"
            style="@style/font_small_xx_white_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_space"
            android:layout_marginTop="@dimen/layout_space"
            android:layout_above="@+id/txt_order_code"
            android:text="@string/txt_default"/>

        <TextView
            android:id="@+id/txt_create_date"
            style="@style/font_small_x_gray_deep_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_site_name"
            android:layout_marginLeft="@dimen/layout_space"
            android:layout_marginTop="5dp"
            android:text="@string/txt_default"/>

        <TextView
            android:id="@+id/mTxtFeeMoney"
            style="@style/font_small_xx_white_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_space"
            android:text="@string/txt_default"/>

        <ImageView
            android:id="@+id/imLine"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1px"
            android:layout_marginLeft="@dimen/layout_space"
            android:background="@color/line_divider"/>

        <ImageView
            android:id="@+id/imLineLong"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1px"
            android:background="@color/line_divider"/>
    </RelativeLayout>
</RelativeLayout>
