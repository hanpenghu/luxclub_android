<resources>

    <!-- SettingView -->
    <declare-styleable name="SettingView">
        <attr name="iOSStyle" format="boolean" />
    </declare-styleable>
    <declare-styleable name="SettingViewItem">
        <attr name="_title" format="string" />
        <attr name="subTitle" format="string" />
        <attr name="titleColor" format="reference" />
        <attr name="subTitleColor" format="reference" />
        <attr name="titleSize" format="reference|dimension" />
        <attr name="subTitleSize" format="reference|dimension" />
        <attr name="drawable" format="reference" />
        <attr name="arrow" format="reference" />
        <attr name="check" format="reference" />
        <attr name="image" format="reference" />
        <attr name="clickable" format="boolean" />
        <attr name="checked" format="boolean" />
        <attr name="_background" format="reference" />
    </declare-styleable>


    <!-- RecyclerViewPager -->
    <declare-styleable name="RecyclerViewPager">
        <attr name="rvp_triggerOffset" format="float" />
        <attr name="rvp_flingFactor" format="float" />
        <attr name="rvp_singlePageFling" format="boolean" />
        <attr name="rvp_inertia" format="boolean"/>
        <attr name="rvp_millisecondsPerInch" format="float" />

    </declare-styleable>


    <!--recyclerview indicator-->
    <declare-styleable name="RecyclerIndicator">
        <attr name="ri_radius" format="dimension"/>
        <attr name="ri_margin" format="dimension"/>
        <attr name="ri_background" format="color|integer"/>
        <attr name="ri_selected_background" format="color|integer"/>
        <attr name="ri_gravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="ri_mode">
            <enum name="inside" value="0"/>
            <enum name="outside" value="1"/>
            <enum name="solo" value="2"/>
        </attr>
    </declare-styleable>

    <!--RoundImageViewByShader-->
    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" />
        <attr name="type" />
    </declare-styleable>
    <attr name="borderRadius" format="dimension" />
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>

    <declare-styleable name="switcherStyple">
        <attr name="switcherBGResource" format="reference"></attr>
    </declare-styleable>

    <!--RatioLayout-->
    <declare-styleable name="RatioLayout">
        <attr name="ratio" format="float" />
        <attr name="relative">
            <enum name="width" value="0" />
            <enum name="height" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="gridPasswordView">

        <attr name="gpvTextColor" format="color|reference" />
        <attr name="gpvTextSize" format="dimension" />

        <attr name="gpvLineColor" format="color" />
        <attr name="gpvGridColor" format="color" />
        <attr name="gpvLineWidth" format="dimension" />

        <attr name="gpvPasswordLength" format="integer" />
        <attr name="gpvPasswordTransformation" format="string" />

        <attr name="gpvPasswordType" format="enum">
            <enum name="numberPassword" value="0" />
            <enum name="textPassword" value="1" />
            <enum name="textVisiblePassword" value="2" />
            <enum name="textWebPassword" value="3" />
        </attr>

    </declare-styleable>

    <!--PullToZoomView-->
    <declare-styleable name="PullToZoomView">
        <attr name="headerView" format="reference" />
        <attr name="contentView" format="reference" />
        <attr name="zoomView" format="reference" />
        <attr name="isHeaderParallax" format="boolean" />
    </declare-styleable>

    <!--pickerview IOS style-->
    <declare-styleable name="wheelview">
        <attr name="gravity">
            <enum name="center" value="17"/>
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>
        <attr name="textSize" format="dimension"/>
        <attr name="textColorOut" format="color"/>
        <attr name="textColorCenter" format="color"/>
        <attr name="dividerColor" format="color"/>
    </declare-styleable>

    <!-- flowLayout 流式标签布局 -->
    <declare-styleable name="TagFlowLayout">
        <attr name="auto_select_effect" format="boolean"/>
        <attr name="max_select" format="integer"/>
        <attr name="flow_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>
</resources>